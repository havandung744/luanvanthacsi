@using luanvanthacsi.Data.Data;
@using luanvanthacsi.Data.Edit;

<Row Gutter="8">
    <AntDesign.Col Span="24">
        <Button Icon="plus" OnClick="AddListThesisDefenseAsync" Color="Color.Green7">Chọn học viên</Button>
    </AntDesign.Col>
    <br />
    <AntDesign.Col Span="24">
        <Table Context="tableContext" TItem="StudentData" DataSource="@studentDatas" Class="table-striped" ScrollY="600"
               Size=@TableSize.Small>
            <Column @bind-Field="@tableContext.stt" Ellipsis="true"></Column>
            <Column @bind-Field="@tableContext.Code" Ellipsis="true"></Column>
            <Column @bind-Field="@tableContext.Name" Ellipsis="true"></Column>
            <Column @bind-Field="@tableContext.Email" Ellipsis="true"></Column>
            <Column @bind-Field="@tableContext.PhoneNumber" Ellipsis="true"></Column>
            <Column @bind-Field="@tableContext.DateOfBirth" Format="dd/MM/yyyy" Ellipsis="true"></Column>
            <Column @bind-Field="@tableContext.TopicName" Ellipsis="true"></Column>
            <ActionColumn Ellipsis="true" Title="Thao tác">
                @*<Popconfirm Placement="Placement.LeftBottom" Title="Bạn có chắc chắn muốn xóa dữ liệu đã chọn?"
                OnConfirm="() => RemoveThesisDefense(tableContext)"
                OkText="Đồng ý"
                CancelText="Hủy">*@
                <Button Icon="close" Type="@ButtonType.Primary" OnClick="() => RemoveThesisDefense(tableContext)" Danger>Xóa</Button>
                @*</Popconfirm>*@
            </ActionColumn>
        </Table>
    </AntDesign.Col>
</Row>

<ThesisDefenseSearchModal @ref="thesisDefenseSearchModal" ModalVisible="modalVisible" ChangeStudentList="LoadAsync" ChanageModalVisible="ChangeModalVisible"></ThesisDefenseSearchModal>