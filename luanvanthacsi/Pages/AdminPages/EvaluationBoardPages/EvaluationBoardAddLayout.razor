
<Tabs OnChange="OnTabChange" DefaultActiveKey="1" ActiveKey="@activeTab">
    <TabBarExtraContent>
        <Space>
            <SpaceItem>
                @if (CurrentUser?.FacultyId == null)
                {
                    <Button OnClick="SaveAsync" type="@ButtonType.Primary">Phê duyệt</Button>
                }
                else
                {
                    <Button OnClick="SaveAsync" type="@ButtonType.Primary">Lưu</Button>
                }
            </SpaceItem>
            <SpaceItem>
                <Tooltip Placement="@Placement.Top" Title="@("Hủy")">
                    <Popconfirm Title="Xác nhận Hủy?"
                                OnConfirm="CancelAsync"
                                OkText="Có"
                                CancelText="Không">
                        <Button Danger>Hủy</Button>
                    </Popconfirm>
                </Tooltip>
            </SpaceItem>
        </Space>
    </TabBarExtraContent>
    <ChildContent>
        <TabPane Key="1" ForceRender>
            <TabTemplate>
                <span><Icon Type="user" />Học viên</span>
            </TabTemplate>
            <ChildContent>
                <StudentOfEvaluationBoard @ref="StudentOfEvaluationBoardRef"></StudentOfEvaluationBoard>
            </ChildContent>
        </TabPane>
        <TabPane Key="2" ForceRender>
            <TabTemplate>
                <span><Icon Type="user" />Chủ tịch</span>
            </TabTemplate>
            <ChildContent>
                <PresidentOfEvaluationBoard @ref="PresidentRef" SelectedScientistIds="selectedScientistIds"></PresidentOfEvaluationBoard>
            </ChildContent>
        </TabPane>
        <TabPane Key="3" ForceRender>
            <TabTemplate>
                <span><Icon Type="user" />Phản biện</span>
            </TabTemplate>
            <ChildContent>
                <CounterattackerOfEvaluationBoard @ref="CounterattackerRef" SelectedScientistIds="@selectedScientistIds"></CounterattackerOfEvaluationBoard>
            </ChildContent>
        </TabPane>
        <TabPane Key="4" ForceRender>
            <TabTemplate>
                <span><Icon Type="user" />Thư ký</span>
            </TabTemplate>
            <ChildContent>
                <SecretaryOfEvaluationBoard @ref="SecretaryOfEvaluationBoardRef" SelectedScientistIds="@selectedScientistIds"></SecretaryOfEvaluationBoard>
            </ChildContent>
        </TabPane>
        <TabPane Key="5" ForceRender>
            <TabTemplate>
                <span><Icon Type="user" />Ủy viên</span>
            </TabTemplate>
            <ChildContent>
                <ScientistOfEvaluationBoard @ref="ScientistOfEvaluationBoardRef" SelectedScientistIds="@selectedScientistIds"></ScientistOfEvaluationBoard>
            </ChildContent>
        </TabPane>
    </ChildContent>
</Tabs>